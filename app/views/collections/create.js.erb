(() => {
  const element = document.querySelector("[data-role~='collections-dropdown']").querySelector("[data-role='dropdown-content']")

  const newElement = document.createElement("div")
  newElement.innerHTML = `<%= j render "collections/dropdown" %>`

  const newElementContent = newElement.querySelector("[data-role='dropdown-content']").outerHTML

  element.outerHTML = newElementContent

  document.body.insertAdjacentHTML("afterBegin", "<toast-message><strong><%= @collection.title %></strong> has been created</toast-message>")
  document.body.insertAdjacentHTML("afterBegin", "<toast-message>This post was added to <strong><%= @collection.title %></strong></toast-message>")
})()
