<div class="dropdown top-offset-small" data-role="dropdown collections-dropdown" data-action="toggle-dropdown-content">
  <%= link_to "Add to collection", "#", class: "button button--secondary bottom-offset-small" %>

  <div class="dropdown__content" data-role="dropdown-content">
    <% if current_user && current_user.collections.any? %>
      <% current_user.collections.each do |collection| %>
        <%= render "collection_posts/form", collection: collection %>
      <% end %>
    <% else %>
      <div class="dropdown__hint">You have not yet created any collections.</div>
    <% end %>

    <%= render "collections/form" %>
  </div>
</div>
