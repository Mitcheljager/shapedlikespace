<header class="header">
  <nav class="navigation">
    <%= link_to "Root", root_path %>

    <div>
      <% if current_user %>
        Logged in as <%= link_to current_user.username, account_path %>
      <% else %>
        <%= link_to "Login", login_path %>
        <%= link_to "Register", new_user_path %>
      <% end %>
    </div>

    <%= text_field_tag :search, "", class: "search form-input" %>
  </nav>

  <%= inline_svg "layout/header-bubbles.svg", class: "header__bubbles" %>
</header>
