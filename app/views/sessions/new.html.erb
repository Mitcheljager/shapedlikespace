<% content_for :page_title, "Login" %>

<div class="top-offset">
  <div class="form-group-columns">
    <div>
      <h1 class="mt-0">Login</h1>

      <div><strong><%= alert %></strong></div>

      <%= form_tag sessions_path do |form| %>
        <div class="form-group">
          <%= label_tag :username, "Username", class: "form-label" %>
          <%= text_field_tag :username, "", placeholder: "Username", class: "form-input" %>
        </div>

        <div class="form-group">
          <%= label_tag :password, "Password", class: "form-label" %>
          <%= password_field_tag :password, "", placeholder: "Password", class: "form-input" %>
        </div>

        <div class="form-group checkbox">
          <%= check_box_tag :remember_me %>
          <%= label_tag :remember_me, "Remember me (uses cookies)" %>
        </div>

        <hr class="small" />

        <%= submit_tag "Submit", class: "button" %>
      <% end %>
    </div>

    <div>
      <h1 class="mt-0">Create an account</h1>

      <label class="form-label">
        Don't have an account?
      </label>

      <div><%= link_to "Create an account", new_user_path, class: "button button--small" %></div>
    </div>
  </div>
</div>
